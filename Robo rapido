class RoboRapido(Robo):
    def __init__(self, x, y):
        super().__init__(x, y, velocidade=6)
        self.image.fill((255, 80, 80))

    def atualizar_posicao(self):
        self.rect.y += self.velocidade
        if self.rect.y > ALTURA:
            self.kill()

    def update(self):
        self.atualizar_posicao()
